def adventure():
    print("🌲 Welcome to the forest adventure!")
    print("🌌 You are in a mysterious forest and have two paths ahead.")
    print("🚶 Which path do you choose? (left/right)")

    choice1 = input("> ").lower()

    if choice1 == "left":
        print("🌿 You take the left path and find a river 🌊.")
        print("🤔 Do you want to cross the river or follow it? (cross/follow)")

        choice2 = input("> ").lower()

        if choice2 == "cross":
            print("🌊 You try to cross the river, but the current is too strong and carries you away 💀.")
            print("☠️ You have drowned. The adventure is over! Better luck next time 🍀.")
        elif choice2 == "follow":
            print("🚶‍♂️ You follow the river and find a friendly village 🏡.")
            print("🎉 You’ve found a safe place! You won the adventure! 🏆")
        else:
            print("❌ That option is not valid. The adventure is over. ⚰️")

    elif choice1 == "right":
        print("🌲 You take the right path and encounter a fierce wolf 🐺.")
        print("⚔️ Do you want to fight or run? (fight/run)")

        choice2 = input("> ").lower()

        if choice2 == "fight":
            print("🗡️ You fight bravely, but the wolf is too strong 💀.")
            print("☠️ The adventure is over! Better luck next time 🍀.")
        elif choice2 == "run":
            print("🏃‍♂️ You run as fast as you can and manage to escape 💨.")
            print("🌅 You find the way out of the forest. You won the adventure! 🏆")
        else:
            print("❌ That option is not valid. The adventure is over. ⚰️")
    else:
        print("❌ That option is not valid. The adventure is over. ⚰️")

if __name__ == "__main__":
    adventure()
